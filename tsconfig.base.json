{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@alekol/shared/dtos": ["libs/shared/dtos/src/index.ts"],
      "@alekol/shared/enums": ["libs/shared/enums/src/index.ts"],
      "@alekol/shared/hooks": ["libs/shared/hooks/src/index.ts"],
      "@alekol/shared/interfaces": ["libs/shared/interfaces/src/index.ts"],
      "@alekol/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@alekol/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
